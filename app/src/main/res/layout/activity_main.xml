<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cyut.sockettest.MainActivity">

    <LinearLayout
        android:id="@+id/displayLayer"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/showStatus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/showData"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonLayer"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_below="@id/displayLayer"
        >
        <Button
            android:id="@+id/startButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="start"
            />

        <Button
            android:id="@+id/showIP"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="showIP"
            android:layout_weight="1"
            />
        <Button
            android:id="@+id/exit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="exit"
            />
    </LinearLayout>



    <TextView
        android:id="@+id/displayIP"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/buttonLayer"
        android:text="IP"
        android:gravity="center"
        />


</RelativeLayout>
